<%- include("../../views/partials/user/header") %>
<br><br><br><br>

<!-- Breadcrumb -->
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
    </ol>
</nav>
<%-include("../../views/partials/user/couponModal")%>


<div class="container">
    <h2 class="text-center">Your Wishlist</h2>
    <div class="row">
        <% if (wishlist.length > 0) { %>
            <% wishlist.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="product-card">
                        <img src="/uploads/re-Images/<%= item.imageUrl %>" alt="<%= item.name %>" class="img-fluid">
                        <h3><%= item.name %></h3>
                        <p>Price: â‚¹<%= item.price %></p>
                        <div>
                            <form action="/add-to-cart-from-wishlist" method="POST" class="d-inline">
                                <input type="hidden" name="productId" value="<%= item.productId %>">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                            
                            <form action="/remove-from-wishlist" method="POST" class="d-inline">
                                <input type="hidden" name="productId" value="<%= item.productId._id %>">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                            
                        </div>
                    </div>
                </div>
            <% }); %>
            <% } else { %>
                <div class="wishlist-empty-message text-center mb-4">
                    <i class="zmdi zmdi-heart-outline" style="font-size: 50px; color: #007bff;"></i>
                    <h3 class="mt-3" style="font-size: 24px; color: #333;">Your Wishlist is Empty</h3>
                    <p style="font-size: 16px; color: #777;">Start adding your favorite items to the wishlist now!</p>
                    <a href="/shop" class="btn btn-primary mt-3" style="padding: 10px 20px; font-size: 16px;">Shop Now</a>
                </div>
            <% } %>
            
    </div>
</div>

<%- include("../../views/partials/user/footer") %>

<style>
    .wishlist-empty-message {
    margin-top: 50px;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 80%;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

.wishlist-empty-message i {
    display: block;
    margin: 0 auto;
    color: #007bff;
}

.wishlist-empty-message h3 {
    color: #333;
    font-weight: 600;
}

.wishlist-empty-message p {
    color: #777;
}

.wishlist-empty-message .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.wishlist-empty-message .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

    .breadcrumb {
        background-color: #ffffff;
        padding: 10px 50px;
        border-radius: 5px;
        margin-bottom: 0px;
    }
    .breadcrumb a {
        text-decoration: none;
        color: #007bff;
    }
    .breadcrumb a:hover {
        text-decoration: underline;
    }
    .product-card {
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin: 10px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }
    .product-card img {
        width: 100%;
        height: auto;
        border-radius: 5px;
    }
    .product-card h3 {
        font-size: 1.2rem;
        margin: 10px 0;
    }
    .product-card p {
        font-size: 1rem;
        color: #555;
    }
    .product-card button {
        margin: 5px;
    }
</style>
