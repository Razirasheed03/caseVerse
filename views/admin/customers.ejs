<%-include("../../views/partials/admin/header")%>
    <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Users list</h2>
          
        </div>
        <div class="card mb-4">
            <header class="card-header text-center mb-20">
                <form action="" method="get" class="d-inline">
                    <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
                        <input type="text" class="form-control border-0 rounded-pill" placeholder="Search Users" name="search">
                        <button class="btn  border-0" type="submit">Search</button>
                    </div>
                </form>
            </header>
            <!-- card-header end// -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Seller</th>
                                <th>Email</th>
                                <th>Registered</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(let i=0;i<data.length;i++){%>
                                <tr>
                                    <td width="40%">
                                        <a href="#" class="itemside">
                                          
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title">
                                                    <%=data[i].username%>
                                                </h6>
                                                <small class="text-muted">
                                                    <%=data[i].phone%>
                                                </small>
                                            </div>
                                        </a>
                                    </td>
                                    <td>
                                        <%=data[i].email%>
                                    </td>
                                    <td>24.11.2024</td>
                                    <td class="text-end">
                                        <%if(data[i].isBlocked===false){%>
                                            <a href="/admin/blockCustomer?id=<%=data[i].id%>"
                                                class="btn btn-sm btn-brand rounded font-sm mt-15">Block</a>
                                            <%}else{%>
                                                <a href="/admin/unblockCustomer?id=<%=data[i].id%>"
                                                    class="btn btn-sm btn-brand rounded font-sm mt-15">Unblock</a>
                                                <%}%>
                                    </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>
                    <!-- table-responsive.// -->
                </div>
            </div>
            <!-- card-body end// -->
        </div>
        <!-- card end// -->
        <div class="pagination-area mt-15 mb-50">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-start">
                    <%for(let i=1;i<=totalPages;i++){%>
                        <li class="page-item <%=(i===currentPage) ? 'active': '' %>">
                            <a class="page-link" href="?page=<%=i%>">
                                <%=i%>
                            </a>
                        </li>
                        <%}%>
                </ul>
            </nav>
        </div>
    </section>
    <!-- content-main end// -->

    <%-include("../../views/partials/admin/footer")%>